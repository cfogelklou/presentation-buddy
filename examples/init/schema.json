{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for Presentation Buddy instructions",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "instructions": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["createFile"]
              },
              "path": {
                "type": "string"
              },
              "skip": {
                "type": "boolean"
              }
            },
            "required": ["type"]
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["openFile"]
              },
              "path": {
                "type": "string"
              }
            },
            "required": ["type"]
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["typeText"]
              },
              "text": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "skip": {
                "type": "boolean"
              },
              "delay": {
                "type": "number"
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["goto"]
              },
              "line": {
                "type": "number"
              },
              "column": {
                "type": "number"
              }
            },
            "required": ["type"]
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["command"]
              },
              "command": {
                "type": "string"
              }
            },
            "required": ["type", "command"]
          }
        ]
      }
    }
  },
  "required": ["instructions"],
  "additionalProperties": false
}
